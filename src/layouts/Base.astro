---
import '../styles/global.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = 'Security research at Ledger. The whispers from the Donjon.',
  image = `${import.meta.env.BASE_URL}ledgerdonjon_banner.png`
} = Astro.props;

const base = import.meta.env.BASE_URL;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href={`${base}favicon.ico`} sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href={`${base}favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${base}favicon-16x16.png`} />
    <link rel="canonical" href={canonicalURL} />
    
    <title>{title} | Ledger Donjon</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Ledger Donjon`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@donjonledger" />
    <meta name="twitter:title" content={`${title} | Ledger Donjon`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    
    <!-- Preconnect to font providers -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    min-height: calc(100vh - 200px);
  }
</style>
