---
import Base from '../layouts/Base.astro';
import Card from '../components/Card.astro';
import { getCollection } from 'astro:content';
import articlesData from '../data/donjon-blog.json';

const base = import.meta.env.BASE_URL;
const withBase = (path) => `${base}${path.replace(/^\/+/, '')}`;

// Get latest security bulletins
const allLsb = await getCollection('lsb');
const latestBulletins = allLsb
  .sort((a, b) => {
    const numA = parseInt(a.id.replace('.md', ''));
    const numB = parseInt(b.id.replace('.md', ''));
    return numB - numA;
  })
  .slice(0, 3);

const articles = Array.isArray(articlesData) ? articlesData : [];
const latestArticles = articles
  .map((article) => ({
    ...article,
    parsedDate: article?.date ? new Date(article.date) : null,
  }))
  .sort((a, b) => {
    const dateA = a.parsedDate?.getTime() ?? 0;
    const dateB = b.parsedDate?.getTime() ?? 0;
    return dateB - dateA;
  })
  .slice(0, 3);

const recentCutoffMs = 90 * 24 * 60 * 60 * 1000;
---

<Base title="Home" description="The security research team at Ledger. Protecting your crypto assets through cutting-edge security research.">
  <section class="hero">
    <div class="hero__container">
      <div class="hero__content">
        <div class="hero__badge">Security Research</div>
        <h1 class="hero__title">
          <span class="text-gradient">Donjon</span> @ Ledger
        </h1>
        <p class="hero__subtitle">
          We are the security research team at Ledger, dedicated to protecting your digital assets 
          through cutting-edge security research, vulnerability discovery, and open-source tools.
        </p>
        <div class="hero__actions">
          <a href={withBase('/bounty/')} class="btn btn--primary btn--with-icon">
            Bug Bounty Program
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href={withBase('/about/')} class="btn btn--secondary btn--with-icon">
            About Us
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href={withBase('/blog/')} class="btn btn--primary btn--blog btn--with-icon">
            Read the Donjon Blog
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
      <div class="hero__visual" aria-hidden="true">
        <div class="hero__grid"></div>
        <div class="hero__orb hero__orb--1"></div>
        <div class="hero__orb hero__orb--2"></div>
        <div class="hero__shield">
          <img src={withBase('/img/donjon-shield.gif')} alt="Donjon Shield" />
        </div>
      </div>
    </div>
  </section>
  
  <section class="features">
    <div class="container">
      <div class="features__grid">
        <a href={withBase('/lsb/')} class="feature-card">
          <div class="feature-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3>Security Bulletins</h3>
          <p>Technical details of past security issues, their impact, and available patches.</p>
        </a>
        
        <a href={withBase('/threat-model/')} class="feature-card">
          <div class="feature-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3>Threat Model</h3>
          <p>Comprehensive documentation of security objectives and mechanisms.</p>
        </a>
        
        <a href={withBase('/tools-suite/')} class="feature-card">
          <div class="feature-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3>Tools Suite</h3>
          <p>Open-source security research tools for hardware and software analysis.</p>
        </a>
        
        <a href={withBase('/bounty/')} class="feature-card feature-card--highlight">
          <div class="feature-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3>Bug Bounty</h3>
          <p>Report vulnerabilities and earn rewards for helping secure Ledger products.</p>
        </a>
      </div>
    </div>
  </section>
  
  <section class="blog-highlights">
    <div class="container">
      <div class="section-header">
        <h2>Latest Blog Posts</h2>
        <a href={withBase('/blog/')} class="section-link">
          View all posts
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>

      {latestArticles.length === 0 ? (
        <div class="blog-highlights__fallback">
          No Donjon blog posts are available yet.
        </div>
      ) : (
        <div class="blog-highlights__grid">
          {latestArticles.map((article) => {
            const isNew = article.parsedDate
              ? Date.now() >= article.parsedDate.getTime() &&
                Date.now() - article.parsedDate.getTime() < recentCutoffMs
              : false;
            const badges = isNew ? [{ text: 'New', tone: 'violet' }] : [];

            return (
              <Card
                title={article.title}
                href={article.url}
                description={article.excerpt}
                date={article.parsedDate ?? undefined}
                badges={badges}
                target="_blank"
                rel="noopener noreferrer"
              />
            );
          })}
        </div>
      )}
    </div>
  </section>

  <section class="bulletins">
    <div class="container">
      <div class="section-header">
        <h2>Latest Security Bulletins</h2>
        <a href={withBase('/lsb/')} class="section-link">
          View all bulletins
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
      
      <div class="bulletins__grid">
        {latestBulletins.map((bulletin) => (
          <Card
            title={bulletin.data.title}
            href={withBase(`/lsb/${bulletin.id.replace('.md', '')}/`)}
            description={bulletin.data.summary}
            badge={`LSB ${bulletin.id.replace('.md', '')}`}
          />
        ))}
      </div>
    </div>
  </section>
  
  <section class="cta">
    <div class="container">
      <div class="cta__card">
        <h2>Found a vulnerability?</h2>
        <p>
          We reward security researchers who help us protect our users. 
          Join our bug bounty program and get recognized in our Hall of Fame.
        </p>
        <div class="cta__actions">
          <a href={withBase('/bounty/')} class="btn btn--primary">
            Submit a Report
          </a>
          <a href={withBase('/hall-of-fame/')} class="btn btn--ghost">
            Hall of Fame
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>

<style lang="scss">
  .hero {
    padding: var(--space-16) 0 var(--space-24);
    position: relative;
    overflow: hidden;
    
    &__container {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 var(--space-6);
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-12);
      align-items: center;
      
      @media (max-width: 960px) {
        grid-template-columns: 1fr;
        text-align: center;
      }
    }
    
    &__content {
      position: relative;
      z-index: 1;
    }
    
    &__badge {
      display: inline-block;
      padding: var(--space-1) var(--space-3);
      font-size: var(--text-xs);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--color-accent-secondary);
      background: var(--color-accent-secondary-glow);
      border-radius: var(--radius-full);
      margin-bottom: var(--space-6);
    }
    
    &__title {
      font-size: var(--text-6xl);
      font-weight: 700;
      line-height: 1.1;
      margin-bottom: var(--space-6);
      
      @media (max-width: 768px) {
        font-size: var(--text-4xl);
      }
    }
    
    &__subtitle {
      font-size: var(--text-xl);
      color: var(--color-text-secondary);
      line-height: var(--leading-relaxed);
      margin-bottom: var(--space-8);
      max-width: 540px;
      
      @media (max-width: 960px) {
        margin: 0 auto var(--space-8);
      }
    }
    
    &__actions {
      display: flex;
      gap: var(--space-4);
      flex-wrap: wrap;
      
      @media (max-width: 960px) {
        justify-content: center;
      }
      
      @media (max-width: 480px) {
        flex-direction: column;
      }
    }
    
    &__visual {
      position: relative;
      height: 400px;
      
      @media (max-width: 960px) {
        display: none;
      }
    }
    
    &__grid {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 500px;
      height: 500px;
      transform: translate(-50%, -50%) perspective(500px) rotateX(60deg) rotateZ(-15deg);
      background-image: 
        linear-gradient(var(--color-border) 1px, transparent 1px),
        linear-gradient(90deg, var(--color-border) 1px, transparent 1px);
      background-size: 40px 40px;
      opacity: 0.4;
      mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
    }
    
    &__orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(60px);
      
      &--1 {
        top: 20%;
        right: 20%;
        width: 200px;
        height: 200px;
        background: var(--color-accent-glow);
      }
      
      &--2 {
        bottom: 20%;
        left: 20%;
        width: 150px;
        height: 150px;
        background: var(--color-accent-secondary-glow);
      }
    }
    
    &__shield {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 240px;
      height: 280px;
      animation: float 6s ease-in-out infinite;
      
      img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        filter: drop-shadow(0 0 30px var(--color-accent-glow));
      }
    }
  }
  
  @keyframes float {
    0%, 100% { transform: translate(-50%, -50%) translateY(0); }
    50% { transform: translate(-50%, -50%) translateY(-20px); }
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    font-weight: 600;
    min-height: 48px;
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
    text-decoration: none;
    border: 1px solid transparent;
    
    &:focus-visible {
      outline: 3px solid color-mix(in srgb, var(--color-ledger-orange) 55%, white);
      outline-offset: 2px;
    }
    
    &--primary {
      background: linear-gradient(135deg, var(--color-ledger-orange), var(--color-ledger-orange-hover));
      color: white;
      box-shadow: 0 12px 24px rgba(255, 83, 0, 0.2);
      
      &:hover {
        background: linear-gradient(135deg, var(--color-ledger-orange-hover), var(--color-ledger-orange));
        transform: translateY(-2px);
        text-decoration: none;
      }
    }
    
    &--secondary {
      background: var(--color-bg-secondary);
      color: var(--color-text-primary);
      border: 1px solid var(--color-border);
      
      &:hover {
        background: var(--color-bg-hover);
        border-color: var(--color-border-hover);
        transform: translateY(-2px);
        text-decoration: none;
      }
    }
    
    &--ghost {
      background: transparent;
      color: var(--color-text-primary);
      border: 1px solid var(--color-border);
      
      &:hover {
        background: var(--color-bg-tertiary);
        text-decoration: none;
      }
    }

    &--blog {
      padding: var(--space-4) var(--space-7);
      font-size: var(--text-base);
      box-shadow: 0 16px 34px rgba(255, 83, 0, 0.28);

      &:hover {
        transform: translateY(-3px);
      }
    }
    
    &--with-icon {
      svg {
        transition: transform var(--transition-fast);
      }
      
      &:hover svg {
        transform: translateX(3px);
      }
    }
  }
  
  .features {
    padding: var(--space-16) 0;
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    
    &__grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-6);
      
      @media (max-width: 1024px) {
        grid-template-columns: repeat(2, 1fr);
      }
      
      @media (max-width: 640px) {
        grid-template-columns: 1fr;
      }
    }
  }
  
  .feature-card {
    padding: var(--space-6);
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: all var(--transition-normal);
    
    &:hover {
      border-color: var(--color-border-hover);
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
      text-decoration: none;
    }
    
    &--highlight {
      background: linear-gradient(135deg, rgba(106, 55, 148, 0.15), transparent);
      border-color: rgba(106, 55, 148, 0.4);
      
      .feature-card__icon {
        background: rgba(106, 55, 148, 0.2);
        
        svg {
          color: var(--color-ledger-purple);
        }
      }
    }
    
    &__icon {
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--color-accent-glow);
      border-radius: var(--radius-lg);
      margin-bottom: var(--space-4);
      
      svg {
        width: 24px;
        height: 24px;
        color: var(--color-accent-primary);
      }
    }
    
    h3 {
      font-size: var(--text-lg);
      margin-bottom: var(--space-2);
      color: var(--color-text-primary);
    }
    
    p {
      font-size: var(--text-sm);
      color: var(--color-text-secondary);
      margin: 0;
      line-height: var(--leading-relaxed);
    }
  }
  
  .blog-highlights {
    padding: var(--space-20) 0;
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);

    &__grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-6);

      @media (max-width: 1024px) {
        grid-template-columns: repeat(2, 1fr);
      }

      @media (max-width: 640px) {
        grid-template-columns: 1fr;
      }
    }

    &__fallback {
      padding: var(--space-6);
      border-radius: var(--radius-lg);
      border: 1px solid var(--color-border);
      background: var(--color-bg-primary);
      color: var(--color-text-secondary);
    }

    :global(.card__date) {
      display: inline-flex;
      align-items: center;
      width: fit-content;
      padding: var(--space-1) var(--space-2);
      border-radius: var(--radius-full);
      background: var(--color-bg-tertiary);
      color: var(--color-text-secondary);
      border: 1px solid var(--color-border);
      font-weight: 600;
      letter-spacing: 0.02em;
    }

    :global(.card__badge--violet) {
      background: linear-gradient(135deg, var(--color-ledger-purple), #4f1b7a);
      color: white;
      box-shadow: 0 0 16px rgba(106, 55, 148, 0.6);
      border: 1px solid rgba(106, 55, 148, 0.6);
    }
  }

  .bulletins {
    padding: var(--space-20) 0;
    
    &__grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-6);
      
      @media (max-width: 1024px) {
        grid-template-columns: repeat(2, 1fr);
      }
      
      @media (max-width: 640px) {
        grid-template-columns: 1fr;
      }
    }
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-8);
    
    h2 {
      font-size: var(--text-3xl);
    }
    
    @media (max-width: 640px) {
      flex-direction: column;
      gap: var(--space-4);
      text-align: center;
    }
  }
  
  .section-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-accent-primary);
    font-weight: 500;
    
    svg {
      transition: transform var(--transition-fast);
    }
    
    &:hover svg {
      transform: translateX(4px);
    }
  }
  
  .cta {
    padding: var(--space-16) 0;
    
    &__card {
      max-width: 700px;
      margin: 0 auto;
      padding: var(--space-12);
      background: linear-gradient(135deg, var(--color-bg-secondary), var(--color-bg-tertiary));
      border: 1px solid var(--color-border);
      border-radius: var(--radius-xl);
      text-align: center;
      
      h2 {
        font-size: var(--text-3xl);
        margin-bottom: var(--space-4);
      }
      
      p {
        font-size: var(--text-lg);
        color: var(--color-text-secondary);
        margin-bottom: var(--space-8);
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
      }
    }
    
    &__actions {
      display: flex;
      gap: var(--space-4);
      justify-content: center;
      
      @media (max-width: 480px) {
        flex-direction: column;
      }
    }
  }
  
  .text-gradient {
    background: linear-gradient(135deg, var(--color-accent-primary), var(--color-accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
