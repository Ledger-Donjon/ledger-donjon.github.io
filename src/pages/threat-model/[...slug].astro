---
import Base from '../../layouts/Base.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const pages = await getCollection('threat-model');
  return pages
    .filter(page => !page.id.endsWith('.png'))
    .map((page) => ({
      params: { slug: page.id.replace('.md', '') },
      props: { page },
    }));
}

const base = import.meta.env.BASE_URL;
const withBase = (path) => `${base}${path.replace(/^\/+/, '')}`;
const { page } = Astro.props;
const { Content } = await render(page);
---

<Base 
  title={page.data.title}
  description={`${page.data.title} - Ledger Devices Threat Model`}
>
  <article class="threat-model-page">
    <div class="container">
      <header class="page__header">
        <a href={withBase('/threat-model/#security-mechanisms')} class="page__back">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Back to Threat Model
        </a>
        <h1>{page.data.title}</h1>
      </header>
      
      <div class="page__content prose">
        <Content />
      </div>
      
      <footer class="page__footer">
        <a href={withBase('/threat-model/#security-mechanisms')} class="back-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Back to Security Mechanisms
        </a>
      </footer>
    </div>
  </article>
</Base>

<style lang="scss">
  .threat-model-page {
    padding: var(--space-12) 0;
  }
  
  .page__header {
    max-width: var(--max-width-prose);
    margin-bottom: var(--space-10);
    
    h1 {
      font-size: var(--text-4xl);
      
      @media (max-width: 768px) {
        font-size: var(--text-3xl);
      }
    }
  }
  
  .page__back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
    
    &:hover {
      color: var(--color-accent-primary);
    }
  }
  
  .page__content {
    max-width: var(--max-width-prose);
    
    :global(img) {
      max-width: 100%;
      height: auto;
      margin: var(--space-6) 0;
      border-radius: var(--radius-lg);
      border: 1px solid var(--color-border);
    }
  }
  
  .page__footer {
    max-width: var(--max-width-prose);
    margin-top: var(--space-12);
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
  }
  
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-secondary);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
    
    &:hover {
      color: var(--color-accent-primary);
      border-color: var(--color-accent-primary);
      text-decoration: none;
    }
  }
</style>
