---
interface Props {
  title: string;
  subtitle?: string;
  size?: 'sm' | 'lg';
}

const { title, subtitle, size = 'lg' } = Astro.props;
---

<section class:list={['hero', `hero--${size}`]}>
  <div class="hero__container">
    <div class="hero__content">
      <h1 class="hero__title">{title}</h1>
      {subtitle && <p class="hero__subtitle">{subtitle}</p>}
      <slot />
    </div>
    <div class="hero__decoration" aria-hidden="true">
      <div class="hero__grid"></div>
      <div class="hero__glow"></div>
    </div>
  </div>
</section>

<style lang="scss">
  .hero {
    position: relative;
    overflow: hidden;
    
    &--lg {
      padding: var(--space-24) 0 var(--space-16);
    }
    
    &--sm {
      padding: var(--space-12) 0;
    }
    
    &__container {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 var(--space-6);
      position: relative;
      z-index: 1;
    }
    
    &__content {
      max-width: 800px;
    }
    
    &__title {
      font-size: var(--text-5xl);
      font-weight: 700;
      line-height: 1.1;
      margin-bottom: var(--space-6);
      
      @media (max-width: 768px) {
        font-size: var(--text-4xl);
      }
    }
    
    &--sm &__title {
      font-size: var(--text-4xl);
      margin-bottom: var(--space-4);
      
      @media (max-width: 768px) {
        font-size: var(--text-3xl);
      }
    }
    
    &__subtitle {
      font-size: var(--text-xl);
      color: var(--color-text-secondary);
      line-height: var(--leading-relaxed);
      margin: 0;
      max-width: 600px;
      
      @media (max-width: 768px) {
        font-size: var(--text-lg);
      }
    }
    
    &__decoration {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 50%;
      pointer-events: none;
      overflow: hidden;
    }
    
    &__grid {
      position: absolute;
      top: -50%;
      right: -20%;
      width: 600px;
      height: 600px;
      background-image: 
        linear-gradient(var(--color-border) 1px, transparent 1px),
        linear-gradient(90deg, var(--color-border) 1px, transparent 1px);
      background-size: 40px 40px;
      opacity: 0.3;
      transform: perspective(500px) rotateX(60deg) rotateZ(-15deg);
      mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
      -webkit-mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
    }
    
    &__glow {
      position: absolute;
      top: 50%;
      right: 10%;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, var(--color-accent-glow) 0%, transparent 70%);
      transform: translate(50%, -50%);
      filter: blur(40px);
    }
  }
</style>
